<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Eherhe ege"
        android:textSize="16dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="12:30 14/11-21"
        android:textSize="16dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_contact"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_treatment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Treatment 1"
        android:textSize="16dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_timetemplate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="-1d 1h"
        android:textSize="16dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_treatment"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_messagetemplate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Message of some sort"
        android:textSize="16dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_timetemplate"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit_scheduledTreatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>